<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".user.fragment.UserFragment"
    android:background="@drawable/songnihuahua">

    <!--标题栏-->
    <LinearLayout
        android:id="@+id/user_main_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp">
        <ImageView
            android:id="@+id/user_main_info_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/top_bar_left_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="用户信息详情"
            android:textColor="#564c4c"
            android:textSize="20dp"/>

        <ImageButton
            android:id="@+id/user_main_info_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icon_more"/>
    </LinearLayout>
    <!--分割线-->
    <View
        android:id="@+id/viewline"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeee"
       />


    <LinearLayout
        android:id="@+id/user_main_info_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@+id/user_main_linearLayout">
        <TextView
            android:id="@+id/user_main_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="#000000"
            android:gravity="center"
            android:text="用户名：snow"/>
        <TextView
            android:id="@+id/user_main_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:text="性别：男"/>

        <TextView
            android:id="@+id/user_main_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:text="用户地址：8栋"/>

        <TextView
            android:id="@+id/user_main_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textColor="#000000"
            android:padding="10dp"
            android:gravity="center"
            android:text="联系电话：11111111111"/>
    </LinearLayout>

    <Button
        android:id="@+id/user_logout_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="退出登录"
        android:layout_below="@+id/user_main_info_linearLayout"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>